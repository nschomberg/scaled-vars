{
  "name": "scaled-vars",
  "version": "1.0.0",
  "description": "A Javascript library for mapping CSS custom properties from a numerical range.",
  "main": "lib/scaled-vars.min.js",
  "scripts": {
    "build": "webpack --env build",
    "dev": "webpack --progress --colors --env dev --watch",
    "dev:test": "npm run dev && npm run test:watch",
    "dev:single": "webpack --progress --colors --env dev",
    "pretest": "npm run dev:single",
    "test": "mocha --compilers js:babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.0.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.24.1",
    "chai": "3.5.0",
    "eslint": "3.19.0",
    "eslint-loader": "1.7.1",
    "mocha": "3.3.0",
    "sinon": "^2.3.6",
    "sinon-chai": "^2.11.0",
    "webpack": "2.4.1",
    "webpack-bundle-analyzer": "^2.8.2",
    "yargs": "7.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nschomberg/scaled-vars"
  },
  "keywords": [
    "css-custom-properties",
    "css custom properties",
    "css variables",
    "d3",
    "scales",
    "d3-scale",
    "js",
    "css"
  ],
  "author": "Nicolas Schomberg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nschomberg/scaled-vars/issues"
  },
  "homepage": "https://github.com/nschomberg/scaled-vars",
  "dependencies": {
    "css-custom-properties": "^0.1.0",
    "d3-scale": "^1.0.6"
  },
  "engines" : {
    "node" : ">= 8.1.2"
  }
}
